<Window x:Class="KR_1.Windows.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление/редактирование книги" 
        Height="430" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="81"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Название:" Margin="0,0,0,28" Grid.RowSpan="2"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TitleTextBox" Margin="5,5,5,5"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Год издания:" Margin="0,0,0,28" Grid.RowSpan="2"/>
        <TextBox Grid.Row="1" Grid.Column="1" Name="YearTextBox" Margin="5,5,5,5"/>

        <Label Grid.Row="2" Grid.Column="0" Content="ISBN:" Margin="0,0,0,28" Grid.RowSpan="2"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="IsbnTextBox" Margin="5,5,5,5"
                 PreviewTextInput="IsbnTextBox_PreviewTextInput"
                 DataObject.Pasting="IsbnTextBox_OnPasting"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Количество:" Margin="0,0,0,32" Grid.RowSpan="2"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="QuantityTextBox" Margin="5,5,5,5"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Авторы:" Margin="0,0,0,10"/>
        <ListBox Grid.Row="4" Grid.Column="1" Name="AuthorsListBox" Margin="5,5,5,5"
                 DisplayMemberPath="FullName" SelectionMode="Multiple" Height="70"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Жанры:" Margin="0,0,0,10"/>
        <ListBox Grid.Row="5" Grid.Column="1" Name="GenresListBox" Margin="5,5,5,5"
                 DisplayMemberPath="Name" SelectionMode="Multiple" Height="70"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,10,0,23" Grid.Column="1" Width="180">
            <Button Content="Сохранить" Width="80" Margin="5" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

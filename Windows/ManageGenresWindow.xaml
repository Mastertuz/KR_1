<Window x:Class="KR_1.Windows.ManageGenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление жанрами" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="GenresGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Width="80" Margin="5" Click="AddGenre_Click"/>
            <Button Content="Редактировать" Width="80" Margin="5" Click="EditGenre_Click"/>
            <Button Content="Удалить" Width="80" Margin="5" Click="DeleteGenre_Click"/>
            <Button Content="Закрыть" Width="80" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
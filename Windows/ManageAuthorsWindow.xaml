<Window x:Class="KR_1.Windows.ManageAuthorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление авторами" Height="450" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Name="AuthorsGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Дата рождения" Binding="{Binding BirthDate, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить" Width="80" Margin="5" Click="AddAuthor_Click"/>
            <Button Content="Редактировать" Width="80" Margin="5" Click="EditAuthor_Click"/>
            <Button Content="Удалить" Width="80" Margin="5" Click="DeleteAuthor_Click"/>
            <Button Content="Закрыть" Width="80" Margin="5" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
<Window x:Class="KR_1.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека книг" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтрация и поиск -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Фильтр по автору:" VerticalAlignment="Center"/>
            <ComboBox Name="AuthorFilterComboBox" 
                      Width="150" Margin="5,0"
                      DisplayMemberPath="FullName"
                      SelectedValuePath="Id"
                      SelectionChanged="Filter_Changed"/>

            <Label Content="Жанр:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <ComboBox Name="GenreFilterComboBox" 
                      Width="150" Margin="5,0"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"
                      SelectionChanged="Filter_Changed"/>

            <Label Content="Поиск по названию:" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBox Name="SearchTextBox" Width="150" Margin="5,0"/>
            <Button Content="Найти" Width="80" Margin="5,0" Click="Search_Click"/>
            <Button Content="Сброс" Width="80" Margin="5,0" Click="Reset_Click"/>
        </StackPanel>

        <!-- Количество книг в наличии -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Всего книг в наличии:" FontWeight="Bold"/>
            <Label Name="TotalQuantityLabel" Content="0" FontWeight="Bold"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" Name="BooksDataGrid" AutoGenerateColumns="False"
                  IsReadOnly="True" SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="100"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding ISBN}" Width="120"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить книгу" Width="120" Margin="5" Click="AddBook_Click"/>
            <Button Content="Редактировать" Width="100" Margin="5" Click="EditBook_Click"/>
            <Button Content="Удалить" Width="100" Margin="5" Click="DeleteBook_Click"/>
            <Button Content="Управление авторами" Width="150" Margin="5" Click="ManageAuthors_Click"/>
            <Button Content="Управление жанрами" Width="150" Margin="5" Click="ManageGenres_Click"/>
        </StackPanel>
    </Grid>
</Window>